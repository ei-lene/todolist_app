<!DOCTYPE html>
<html>
<head>
  <title>TodolistApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="background">
    <div class="header_display">
      <nav class="top_nav">
        <% if current_user %>
          <ul>  
            <li>
              <%= link_to "Log out", logout_path %> 
            </li>
          </ul>  
          <ul class="notice">
            <li>Logged in as <%= current_user.display_name %>
            </li>
          </ul>
        <% else %>
          <ul>
            <li>
              <%= link_to "Sign up", signup_path %> 
            </li>
            <li>
              <%= link_to "Log in", login_path %> 
            </li>
          </ul>
        <% end %>
      </nav>
      <ul class="notice">
        <li>
          <%= notice %>
        </li>
      </ul>
      <ul id="alert">
        <li>
          <%= alert %>
        </li>
      </ul>
    </div>
    <div class="clear"></div>
  

    <%= yield %>

    <nav class="nav_links">
      <ul>
        <% unless current_page?(root_path) %>
          <li><%= link_to "Home", root_path%></li>
        <% end %>
        <% unless current_page?(new_list_path) %>
          <li><%= link_to "Create a list", new_list_path%></li>
        <% end %>
        <% unless current_page?(new_task_path) %>
          <li><%= link_to "Add tasks", new_task_path%></li>
        <% end %>
        <% unless current_page?(users_path) %>
          <li><%= link_to "Users", users_path%></li>  
        <% end %>  
      </ul>
    </nav>
</div>
</body>
</html>
