<!DOCTYPE html>
<html>
<head>
  <title>TodolistApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="background">
    <div class="header_display">
      <nav class="top_nav">
        <ul>
          <% if current_user %>
            <li>Logged in as <%= current_user.display_name %>
            </li>
            <li>
              <%= link_to "Log out", session_path(current_user), method: "delete" %> 
            </li>
          <% else %>
            <li>
              <%= link_to "Sign up", new_user_path %> 
            </li>
            <li>
              <%= link_to "Log in", new_session_path %> 
            </li>
          <% end %>
        </ul>
      </nav>
      <ul id="notice">
        <li>
          <%= notice %>
        </li>
      </ul>
      <ul id="alert">
        <li>
          <%= alert %>
        </li>
      </ul>
    </div>
    <div class="clear"></div>
  

    <%= yield %>

    <nav class="nav_links">
      <ul>
        <% unless current_page?(root_path) %>
          <li><%= link_to "Home", root_path%></li>
        <% end %>
        <% unless current_page?(new_list_path) %>
          <li><%= link_to "Create a list", new_list_path%></li>
        <% end %>
        <% unless current_page?(new_task_path) %>
          <li><%= link_to "Add tasks", new_task_path%></li>
        <% end %>
        <% unless current_page?(users_path) %>
          <li><%= link_to "Users", users_path%></li>  
        <% end %>  
      </ul>
    </nav>
</div>
</body>
</html>
