<h1> Edit this list</h1>

<%= form_for(@list) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>
  <%= f.submit %>
<% end %>

<% @list.tasks.each do |t| %>
  <%= form_for(t) do |f| %>
    <%= f.label(:description) %>
    <%= f.text_field(:description) %>
    <br>
    <%= f.submit %>
  <% end %>
<% end %>

