<h1> Add tasks</h1>
<%= form_for(@task) do |f| %>
  <%= f.label(:description) %>
  <%= f.text_field(:description) %>
  <br>
  <%= f.label("Add to list :") %>
  <%= f.select :list_id, List.all.collect { |l| [l.name, l.id]} %>
  <br>
  <br>
  <%= f.label("Assign to user :") %>
  <% User.all.each do |u| %>
    <br>
    <input type="checkbox" name="task[user_ids][]" value="<%= u.id %>" /> <%= u.name %>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>