<h1>Sign up</h1>
<div class="form">
  <%= form_for @user do |f| %>  
    <% if @user.errors.any? %>
      <div id="error_messages">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="fields">
      <%= f.label :display_name %><br>
      <%= f.text_field :display_name %>
      <span id="displayname_error"> Username should have more than 3 characters</span>
    </div>
    <div class="fields">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
      <span id="username_error"> Name should have more than 3 characters</span>
    </div>
    <div class="fields">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
      <span id="email_error"> Email should be valid</span>
    </div>
    <div class="field">
    <%= f.label :please_confirm_your_email %><br />
    <%= f.text_field :email_confirmation %>
    <span id="email_confirmation_error"> Confirmation email does not match email</span>
    <span id="email_validated"> Email entries match</span>
  </div>
    <div class="fields">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
      <span id="password_error"> </span>
    </div>
    <div class="fields">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
      <span id="password_confirmation_error"> Confirmation password does not match password</span>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>