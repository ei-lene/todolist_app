<h1>Sign up</h1>
<div class="form">
  <%= form_for @user do |f| %>  
    <% if @user.errors.any? %>
      <div id="error_messages">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="fields">
      <%= f.label :display_name %><br>
      <%= f.text_field :display_name %>
    </div>
    <div class="fields">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="fields">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="fields">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="fields">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>